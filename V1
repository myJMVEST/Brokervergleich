document.getElementById("broker-form").addEventListener("submit", function(e){
    e.preventDefault();
    const loader = document.getElementById("loader");
    loader.style.display = "block";
    const results = document.getElementById("results");
    results.innerHTML = "";

    setTimeout(() => {
        const formData = new FormData(e.target);
        const userPreferences = {};
        formData.forEach((value, key) => userPreferences[key] = value);

        const totalFields = Object.keys(userPreferences).length;
        const maxScore = totalFields * 10;

        const scoredBrokers = brokers.map(broker => {
            let score = 0;
            for (const key in userPreferences) {
                if (Array.isArray(broker[key]) ? broker[key].includes(userPreferences[key]) : broker[key] === userPreferences[key]) {
                    score += 10;
                }
            }
            return { broker, score };
        });

        scoredBrokers.sort((a, b) => b.score - a.score);
        const topBrokers = scoredBrokers.slice(0, 5);

        topBrokers.forEach(item => {
            const card = document.createElement("div");
            card.className = "broker-card";
            const matchPercent = Math.round((item.score / maxScore) * 100);
           let barColor;
if (matchPercent < 60) {
    barColor = "#ef4444"; // rot
} else if (matchPercent < 80) {
    barColor = "#facc15"; // gelb
} else {
    barColor = "#22c55e"; // gr√ºn
}

card.innerHTML = `
    <img src="${item.broker.logo}" alt="${item.broker.name}">
    <div>
        <h3>${item.broker.name}</h3>
        <p>${item.broker.description}</p>
        <p><strong>√úbereinstimmung:</strong> ${matchPercent}%</p>
        <div class="match-bar-container">
            <div class="match-bar-fill" style="width: ${matchPercent}%; background: ${barColor};"></div>
        </div>
        <a class="affiliate-link" href="${item.broker.affiliateLink}" target="_blank">Jetzt registrieren üöÄ</a>
    </div>`;
            results.appendChild(card);
        });

        loader.style.display = "none";
    }, 800);
});



</script>

               
